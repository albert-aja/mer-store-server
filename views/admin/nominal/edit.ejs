<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- meta -->
    <%- include ../../partials/meta.ejs %>
    <title>AdminLTE 3 | Dashboard</title>

    <!-- css -->
    <%- include ../../partials/css.ejs %>
  </head>
  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <!-- Preloader -->
      <%- include ../../partials/preloader.ejs %>

      <!-- navbar -->
      <%- include ../../partials/navbar.ejs %>

      <!-- sidebar -->
      <%- include ../../partials/sidebar.ejs %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Edit Nominal</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item">
                    <a href="/nominal"></a>Nominal
                  </li>
                  <li class="breadcrumb-item active">Edit</li>
                </ol>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Edit Nominal <%= nominal.coinName %></h3>
                    </div>
                    <form action="/nominal/edit/<%= nominal.id %>?_method=PUT" method="POST">
                      <div class="card-body">
                        <div class="form-group">
                          <label>Nama Koin</label>
                          <select class="form-control select2" style="width: 100%;" name="coinName" required>
                            <option selected="selected" disabled>Pilih Koin</option>
                            <option value="Gold" <%= nominal.coinName == 'Gold' ? 'selected' : '' %> >Gold</option>
                            <option value="Diamond" <%= nominal.coinName == 'Diamond' ? 'selected' : '' %> >Diamond</option>
                            <option value="Jewel" <%= nominal.coinName == 'Jewel' ? 'selected' : '' %> >Jewel</option>
                          </select>
                        </div>
                        <div class="form-group">
                          <label for="coinQuantity">Jumlah Koin</label>
                          <input
                            value="<%= nominal.coinQuantity %>"
                            type="number"
                            name="coinQuantity"
                            class="form-control"
                            id="coinQuantity"
                            placeholder="Jumlah Koin"
                            required
                          />
                        </div>
                        <div class="form-group">
                          <label for="price">Harga</label>
                          <input
                            value="<%= nominal.price %>"
                            type="number"
                            name="price"
                            class="form-control"
                            id="price"
                            placeholder="Masukkan harga"
                            required
                          />
                        </div>
                      </div>
                      <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                          Simpan
                        </button>
                      </div>
                    </form>
                </div>
            </div>
          </div>
        </section>
      </div>
      <!-- footer -->
      <%- include ../../partials/footer.ejs %>
    </div>

    <!-- js -->
    <%- include ../../partials/js.ejs %>
  </body>
</html>
