<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- meta -->
    <%- include ../../partials/meta.ejs %>
    <title>AdminLTE 3 | Dashboard</title>

    <!-- css -->
    <%- include ../../partials/css.ejs %>
  </head>
  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <!-- Preloader -->
      <%- include ../../partials/preloader.ejs %>

      <!-- navbar -->
      <%- include ../../partials/navbar.ejs %>

      <!-- sidebar -->
      <%- include ../../partials/sidebar.ejs %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Edit Voucher</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item">
                    <a href="/voucher"></a>Voucher
                  </li>
                  <li class="breadcrumb-item active">Edit</li>
                </ol>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Edit Voucher <%= voucher.name %></h3>
                    </div>
                    <form action="/voucher/edit/<%= voucher._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                      <div class="card-body">
                        <div class="form-group">
                          <label for="name">Nama Game</label>
                          <input
                            value="<%= voucher.name %>"
                            type="text"
                            name="name"
                            class="form-control"
                            id="name"
                            placeholder="Nama Game"
                            required
                          />
                        </div>
                        <div class="form-group">
                          <label>Kategori</label>
                          <select class="form-control select2" style="width: 100%;" name="category" required>
                            <option selected="selected" disabled>Pilih Kategori</option>
                            <% category.forEach(category => { %>
                            <option value="<%= category._id %>" 
                              <% if(category._id.toString() === voucher?.category?._id.toString()){ %> 
                              selected
                              <% } %>
                            ><%= category.name %></option>
                            <% }) %>
                          </select>
                        </div>
                        <div class="form-group">
                          <label>Nominal</label>
                          <div class="select2-purple">
                            <select class="form-control select2" data-placeholder='Pilih Nominal' style="width: 100%;" name="nominals" multiple required>
                              <% nominal.forEach(nominal => { %>
                              <option value="<%= nominal._id %>"
                              <% voucher.nominals.forEach(voucherNominal => { %>
                                <% if(nominal._id.toString() === voucherNominal._id.toString()){ %> 
                                selected
                                <% } %>
                              <% }) %>
                              ><%= nominal.coinName %> (<%= nominal.price %>)</option>
                              <% }) %>
                            </select>
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="name">Thumbnail Game</label>
                          <input
                            type="file"
                            name="thumbnail"
                            class="form-control"
                            id="thumbnail"
                            placeholder="Thumbnail Game"
                          />
                          <img src="https://mern-storegg.herokuapp.com/uploads/<%= voucher.thumbnail %>" alt="" class="mt-3" id="preview">
                        </div>
                      </div>
                      <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                          Simpan
                        </button>
                      </div>
                    </form>
                </div>
            </div>
          </div>
        </section>
      </div>
      <!-- footer -->
      <%- include ../../partials/footer.ejs %>
    </div>

    <!-- js -->
    <%- include ../../partials/js.ejs %>
    <script>
      function readURL(input){
        if(input.files && input.files[0]){
          const reader = new FileReader();

          reader.onload = function(e){
            $('#preview').attr('src', e.target.result)
            $('#preview').attr('width', '20%')
            $('#preview').attr('height', '20%')
          }

          reader.readAsDataURL(input.files[0])
        }
      }

      $('#thumbnail').change(function(){
        readURL(this)
      })
    </script>
  </body>
</html>
